{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AssumeCDKRoles",
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": [
        "arn:aws:iam::*:role/cdk-hnb659fds-deploy-role-*-eu-west-2",
        "arn:aws:iam::*:role/cdk-hnb659fds-file-publishing-role-*-eu-west-2",
        "arn:aws:iam::*:role/cdk-hnb659fds-lookup-role-*-eu-west-2",
        "arn:aws:iam::*:role/cdk-hnb659fds-image-publishing-role-*-eu-west-2"
      ]
    },
    {
      "Sid": "ReadCDKBootstrapVersion",
      "Effect": "Allow",
      "Action": "ssm:GetParameter",
      "Resource": "arn:aws:ssm:eu-west-2:*:parameter/cdk-bootstrap/hnb659fds/version"
    },
    {
      "Sid": "CloudFormationPermissions",
      "Effect": "Allow",
      "Action": [
        "cloudformation:DescribeStacks",
        "cloudformation:GetTemplate",
        "cloudformation:DescribeStackEvents",
        "cloudformation:DescribeChangeSet",
        "cloudformation:CreateChangeSet",
        "cloudformation:ExecuteChangeSet",
        "cloudformation:DeleteChangeSet"
      ],
      "Resource": [
        "arn:aws:cloudformation:eu-west-2:*:stack/AIBotDynamoDBStack/*",
        "arn:aws:cloudformation:eu-west-2:*:stack/AIBotSecretsManagerStack/*",
        "arn:aws:cloudformation:eu-west-2:*:stack/AIBotNetworkStack/*",
        "arn:aws:cloudformation:eu-west-2:*:stack/AIBotLambdaStack/*",
        "arn:aws:cloudformation:eu-west-2:*:stack/CDKToolkit/*"
      ]
    },
    {
      "Sid": "S3StagingBucketAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetBucketLocation",
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::cdk-hnb659fds-assets-*-eu-west-2",
        "arn:aws:s3:::cdk-hnb659fds-assets-*-eu-west-2/*"
      ]
    }
  ]
}