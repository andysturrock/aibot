{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "eslint__js": [
        "./node_modules/@eslint/js/types/index.d.ts"
      ]
    }
  },
  "include": [
    "eslint.config.js"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/cdk.out"
  ]
}